---
layout: layouts/base
---
<main id="main" class="post">
  <header>
    <h1>{{ title | addNbsp | safe }}</h1>
    {% from "macros/macro.njk" import meta %}
      {{ meta({
        author: author,
        date: page.date,
        layout: layout,
        content: content
      }) }}
  </header>
    {% include "partials/toc.html" %}
    {{ content | safe}}
    {% if tags %}
    <div class="post-tag font-weight:500">
      Tagged: 
        {% for tag in tags | filterTagList %}
          {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="post-tag-item">{{ tag }}</a>
        {% endfor %}
    </div>
    {% endif %}
</main>
<hr style="border-style: solid;">
<aside class="post-list">

  {% set postslist = collections.posts | randomLimit(2, page.url) %}
  {% set headingLevel = 'h3' %}

  <h2>More Posts</h2>
  {% include "partials/postslist.njk" %}

</aside>