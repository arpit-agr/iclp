{% set authorLength = params.author | length %}

<div class="post-meta color:darkish">
    <span class="cluster" style="gap:var(--s-5);">
        <p class="visually-hidden">Author:</p>
        <span aria-hidden="true" style="vertical-align: middle; margin-right: 2px;">
        {% if authorLength > 1 %}
            <svg 
                xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16" 
            >
                <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                <path fill-rule="evenodd" d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z"/>
                <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z"/>
            </svg>
        {% elif authorLength == 1 %}
            <svg 
                xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16" 
            >
                <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
            </svg>
        {% endif %}
        </span>
    {% if params.author != "Gautam Bhatia" and params.author !=  "Vasudev Devadasan" %}
        Guest Post : 
    {% endif %} 
    {% if params.author %}
        {% set comma = joiner() %}
        {% for author in params.author -%}
            {{ comma() }} {{ author }}
        {%- endfor %}
    {% else %}
        Gautam Bhatia 
    {% endif %} 
    </span>
    <p class="visually-hidden">Publish Date:</p>
    <time datetime={{ params.date | dump | safe }}>
    ùçÑ {{ params.date | postDate}}
    </time>
    {% if params.layout == 'layouts/post' %}
        <p>
            <span aria-hidden="true" style="vertical-align: middle;">
                <svg 
                    xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-hourglass-split" viewBox="0 0 16 16"
                >
                    <path d="M2.5 15a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1h-11zm2-13v1c0 .537.12 1.045.337 1.5h6.326c.216-.455.337-.963.337-1.5V2h-7zm3 6.35c0 .701-.478 1.236-1.011 1.492A3.5 3.5 0 0 0 4.5 13s.866-1.299 3-1.48V8.35zm1 0v3.17c2.134.181 3 1.48 3 1.48a3.5 3.5 0 0 0-1.989-3.158C8.978 9.586 8.5 9.052 8.5 8.351z"/>
                </svg>
            </span>
            {{ params.content | emojiReadTime }}
        </p>
    {% endif %}
</div>