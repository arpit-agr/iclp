<div class="post-meta color:darkish">
    <span>
        <span class="visually-hidden">Author:</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-check" width="13" height="13" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <circle cx="9" cy="7" r="4" />
            <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
            <path d="M16 11l2 2l4 -4" />
        </svg>
    {% if params.author != "Gautam Bhatia" and params.author !=  "Vasudev Devadasan" %}
        Guest Post: 
    {% endif %} 
    {% if params.author %}
        {% set comma = joiner() %}
        {% for author in params.author -%}
            {{ comma() }} {{ author }}
        {%- endfor %}
    {% else %}
        Gautam Bhatia 
    {% endif %} 
    </span>
    <time datetime={{ params.date | dump | safe }}>
    ùçÑ {{ params.date | postDate}}
    </time>
